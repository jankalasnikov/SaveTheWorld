
@{
    ViewBag.Title = "Donate money to save the world!";
}

<h2 class="text-center"><b>@ViewBag.Title</b></h2>


<div class="form-group">
    <label class="col-form-label col-form-label-lg" for="inputLarge">Your name</label>
    <input class="form-control form-control-lg" type="text" placeholder="First name" id="inputLarge">

<div class="form-group">
    <label class="col-form-label" for="inputDefault"></label>
    <input type="text" class="form-control" placeholder="Second name" id="inputDefault">
</div>
    </div>

<div class="form-group">
    <label class="col-form-label col-form-label-sm" for="inputSmall">Your email</label>
    <input class="form-control form-control-sm" type="text" placeholder="" id="inputSmall">
</div>

<div class="form-group">
    <label class="control-label">How much would you like to donate?</label>
    <div class="form-group">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">$</span>
            </div>
            <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
            <div class="input-group-append">
                <span class="input-group-text">.00</span>
            </div>
        </div>
    </div>
</div>
<fieldset>
    <p>To which disaster would you like to donate?</p>
    <div class="form-group">
        <select class="custom-select">
            <option selected="">Choose an option</option>
            <option value="1">Earthquakes</option>
            <option value="2">Tsunamis</option>
            <option value="3">Hurricanes</option>
        </select>
    </div>
    <legend>Custom forms</legend>
    <div class="form-group">
        <div class="custom-control custom-radio">
            <input type="radio" id="customRadio1" name="customRadio" class="custom-control-input" checked="">
            <label class="custom-control-label" for="customRadio1">Toggle this custom radio</label>
        </div>
        <div class="custom-control custom-radio">
            <input type="radio" id="customRadio2" name="customRadio" class="custom-control-input">
            <label class="custom-control-label" for="customRadio2">Or toggle this other custom radio</label>
        </div>
        <div class="custom-control custom-radio">
            <input type="radio" id="customRadio3" name="customRadio" class="custom-control-input" disabled="">
            <label class="custom-control-label" for="customRadio3">Disabled custom radio</label>
        </div>
    </div>
    <div class="form-group">
        <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" id="customCheck1" checked="">
            <label class="custom-control-label" for="customCheck1">I agree with the terms</label>
        </div>
    </div>

</fieldset>
<button type="button" class="btn btn-primary btn-lg btn-block">Donate now!</button>